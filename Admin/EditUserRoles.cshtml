@model Inventory_Project.Models.EditUserRolesViewModel

@{
    ViewData["Title"] = "Edit User Roles";
}

<div class="container mt-4">
    <h2>Edit User Roles</h2>
    <p class="text-muted">
        User: <strong>@Model.Email</strong>
    </p>

    <form asp-action="EditUserRoles" method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="card">
            <div class="card-header">
                Available Roles
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="form-check mb-2">
                        <input asp-for="Roles[i].Selected" class="form-check-input" />
                        <label class="form-check-label">
                            @Model.Roles[i].RoleName
                        </label>
                        <input type="hidden" asp-for="Roles[i].RoleName" />
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save</button>
        <a asp-action="Users" class="btn btn-secondary mt-3 ms-2">Back</a>
    </form>
</div>
