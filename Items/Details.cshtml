@model Inventory_Project.Models.Item

@{
    ViewData["Title"] = "Details";
}

<h1>Item Details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="Product image" style="max-width:100%; max-height:250px;" />
        }
        else
        {
            <p class="text-muted">No image available.</p>
        }
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Product Name</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>

            <dt class="col-sm-3">Code</dt>
            <dd class="col-sm-9">@Model.ItemCode</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C2")</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Model.CreatedAt</dd>
        </dl>
        <p>
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </p>
    </div>
</div>
