@model IEnumerable<Inventory_Project.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Items</h2>

        <div>
            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
            {
                <a asp-action="ExportToPdf" class="btn btn-danger me-2">
                    Export to PDF
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    Create New
                </a>
            }
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Image</th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["NameSortParm"]">
                            @Html.DisplayNameFor(model => model.First().ProductName)
                        </a>
                    </th>
                    <th>@Html.DisplayNameFor(model => model.First().ItemCode)</th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["PriceSortParm"]">
                            @Html.DisplayNameFor(model => model.First().Price)
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["QuantitySortParm"]">
                            Quantity / Status
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-sortOrder="@ViewData["CategorySortParm"]">
                            @Html.DisplayNameFor(model => model.First().Category)
                        </a>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        var rowClass = item.Quantity == 0
                        ? "table-danger"
                        : (item.Quantity < 5 ? "table-warning" : "");

                        <tr class="@rowClass">
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="@item.ImagePath" style="height:40px;" />
                                }
                            </td>
                            <td>@item.ProductName</td>
                            <td>@item.ItemCode</td>
                            <td>@item.Price.ToString("C2")</td>
                            <td>
                                <div>@item.Quantity</div>
                                <div>
                                    @if (item.Quantity == 0)
                                    {
                                        <span class="badge bg-danger">OUT OF STOCK</span>
                                    }
                                    else if (item.Quantity < 5)
                                    {
                                        <span class="badge bg-warning text-dark">LOW STOCK</span>
                                    }
                                </div>
                            </td>
                            <td>@item.Category?.Name</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info me-1">Details</a>

                                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning me-1">Edit</a>
                                }

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            No items found. Click <strong>Create New</strong> to add one.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
